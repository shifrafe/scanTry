<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayBook">

    <TextView
        android:id="@+id/pname_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_marginBottom="11dp"
        android:fontFamily="casual"
        android:text="TextView"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/pauthor"
        app:layout_constraintEnd_toEndOf="@+id/readBook"
        app:layout_constraintStart_toStartOf="@+id/audioBook"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pauthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginBottom="68dp"
        android:fontFamily="casual"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/readBook"
        app:layout_constraintEnd_toEndOf="@+id/pname_book"
        app:layout_constraintTop_toBottomOf="@+id/pname_book" />

    <ImageButton
        android:id="@+id/readBook"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="60dp"
        app:srcCompat="@drawable/ic_readbook"
        app:layout_constraintBottom_toTopOf="@+id/soundBook"
        app:layout_constraintEnd_toEndOf="@+id/soundBook"
        app:layout_constraintStart_toStartOf="@+id/soundBook"
        app:layout_constraintTop_toBottomOf="@+id/pauthor" />

    <ImageButton
        android:id="@+id/soundBook"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="59dp"
        app:srcCompat="@drawable/ic_soundebook"
        app:layout_constraintBottom_toTopOf="@+id/audioBook"
        app:layout_constraintStart_toStartOf="@+id/audioBook"
        app:layout_constraintTop_toBottomOf="@+id/readBook" />

    <ImageButton
        android:id="@+id/audioBook"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_marginStart="156dp"
        android:layout_marginLeft="156dp"
        android:layout_marginBottom="65dp"
        app:srcCompat = "@drawable/ic_audio_book"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/soundBook" />

</androidx.constraintlayout.widget.ConstraintLayout>